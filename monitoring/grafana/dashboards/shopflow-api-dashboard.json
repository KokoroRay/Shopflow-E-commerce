{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Service Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"shopflow-api\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN"
                },
                "1": {
                  "text": "UP"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "title": "Request Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"shopflow-api\"}[5m])",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "requests/sec"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 9,
        "x": 6,
        "y": 0
      }
    },
    {
      "title": "Response Time (95th percentile)",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"shopflow-api\"}[5m]))",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "seconds"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 9,
        "x": 15,
        "y": 0
      }
    },
    {
      "title": "Error Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"shopflow-api\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"shopflow-api\"}[5m])",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "error rate",
          "max": 1,
          "min": 0
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "title": "Active Users",
      "type": "graph",
      "targets": [
        {
          "expr": "shopflow_active_users_total",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "users"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "title": "Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"shopflow-api\"} / 1024 / 1024",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "MB"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 16
      }
    },
    {
      "title": "CPU Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"shopflow-api\"}[5m]) * 100",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "% CPU",
          "max": 100,
          "min": 0
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 16
      }
    },
    {
      "title": "Database Connections",
      "type": "graph",
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{job=\"postgres\"}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "connections"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 16
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 27,
  "style": "dark",
  "tags": [
    "shopflow",
    "api",
    "monitoring"
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "ShopFlow API Dashboard",
  "uid": "shopflow-api",
  "version": 1
}
