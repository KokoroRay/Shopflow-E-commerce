# EditorConfig for Test Projects
root = false

[*.Tests/**/*.cs]
# Allow underscores in test method names
dotnet_diagnostic.CA1707.severity = none

# Allow missing XML documentation in tests
dotnet_diagnostic.CS1591.severity = none

# Allow public fields in test fixtures  
dotnet_diagnostic.CA1051.severity = none

# Allow non-static methods in test helpers
dotnet_diagnostic.CA1822.severity = none

# Allow constructor calls to virtual methods in test base classes
dotnet_diagnostic.CA2214.severity = none

# Allow null in test parameters (xUnit requires this sometimes)
dotnet_diagnostic.xUnit1012.severity = suggestion

# Allow unused test parameters (test data driven scenarios)
dotnet_diagnostic.xUnit1026.severity = suggestion
dotnet_diagnostic.S1172.severity = suggestion

# Allow dispose issues in tests
dotnet_diagnostic.CA2000.severity = suggestion
